<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Real-Time Products</title>
</head>
<body>
  <h1>Real-Time Products</h1>
  <!-- Contenido de la lista de productos en tiempo real -->
  <ul id="productList"></ul>

  <!-- Configuración de Socket.IO -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/4.0.1/socket.io.js"></script>
  <script>
    const socket = io();

    // Escuchar eventos de actualización
    socket.on('actualizarProductos', (data) => {
      // Lógica para actualizar la lista de productos en el DOM
      const productList = document.getElementById('productList');
      productList.innerHTML = ''; // Limpiar la lista antes de agregar los productos actualizados

      data.productos.forEach((producto) => {
        const listItem = document.createElement('li');
        listItem.textContent = `ID: ${producto.id}, Nombre: ${producto.nombre}`;
        productList.appendChild(listItem);
      });
    });
  </script>
</body>
</html>
